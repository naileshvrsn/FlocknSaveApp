<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="36dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="56dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_logo_relative_layout">
            <ImageView
                android:id="@+id/homeLogo"
                style="@style/flocknsaveLogoLogin"
                android:layout_height="120dp"
                android:src="@drawable/logo_flocknsave" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_product"
                android:layout_marginStart="310dp"
                android:layout_marginTop="88dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/add_product_title"
            style="@style/homeText3"
            android:text="Add Product"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/upload_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_photo" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
        <EditText
            android:id="@+id/add_product_name"
            style="@style/LoginFieldsTextStyle"
            android:hint="Product name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
        <EditText
            android:id="@+id/add_product_description"
            style="@style/LoginFieldsTextStyle"
            android:hint="Product Description"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
        <EditText
            android:id="@+id/add_product_unit"
            style="@style/LoginFieldsTextStyle"
            android:hint="Unit"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
        <EditText
            android:id="@+id/add_product_saving"
            style="@style/LoginFieldsTextStyle"
            android:inputType="numberDecimal"
            android:hint="Saving Percentage"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/add_product_region"
            android:background="@drawable/rounded_button_dark_transparent"
            style="@style/LoginFieldsTextStyle"
            android:minHeight="48dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/add_product_category"
            android:background="@drawable/rounded_button_dark_transparent"
            style="@style/LoginFieldsTextStyle"
            android:minHeight="48dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/add_product_supplier"
            android:background="@drawable/rounded_button_dark_transparent"
            style="@style/LoginFieldsTextStyle"
            android:minHeight="48dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_product_button"
            style="@style/ButtonsStyle"
            android:padding="12dp"
            android:textColor="@color/flocknsaveDarkBlue"
            android:background="@drawable/rounded_button"
            android:text="Add Product"/>

    </LinearLayout>
</ScrollView>