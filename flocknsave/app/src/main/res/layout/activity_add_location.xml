<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/register_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="36dp"
        android:paddingRight="24dp"
        android:paddingBottom="56dp">

        <ImageView
            android:id="@+id/homeLogo"
            style="@style/flocknsaveLogoLogin"
            android:layout_height="120dp"
            android:src="@drawable/logo_flocknsave" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_street_number"
                style="@style/LoginFieldsTextStyle"
                android:hint="Street Number"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_address1"
                style="@style/LoginFieldsTextStyle"
                android:inputType="textPostalAddress"
                android:hint="Address Line 1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_address2"
                style="@style/LoginFieldsTextStyle"
                android:hint="Address Line 2(optional)" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_suburb"
                style="@style/LoginFieldsTextStyle"
                android:hint="Suburb/District"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_city"
                style="@style/LoginFieldsTextStyle"
                android:layout_margin="4dp"
                android:hint="City/Town"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
            <EditText
                android:id="@+id/location_post_code"
                style="@style/LoginFieldsTextStyle"
                android:hint="Post code"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/location_region_spinner"
            style="@style/LoginFieldsTextStyle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button_dark_transparent"
            android:minHeight="48dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/location_add_location"
            style="@style/ButtonsStyle"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="Submit"
            android:textColor="@color/flocknsaveDarkBlue" />

        <TextView
            android:id="@+id/location_back"
            style="@style/ButtonsStyle"
            android:background="@drawable/rounded_button_dark"
            android:gravity="center"
            android:padding="6dp"
            android:text="Cancel"
            android:textColor="@color/flocknsaveGreen"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>