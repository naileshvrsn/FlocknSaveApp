<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="36dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="56dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_logo_relative_layout">
            <ImageView
                android:id="@+id/homeLogo"
                style="@style/flocknsaveLogoLogin"
                android:layout_height="120dp"
                android:src="@drawable/logo_flocknsave" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_vpn_key_black_24dp"
                android:layout_marginStart="310dp"
                android:layout_marginTop="88dp"/>
        </RelativeLayout>

        <TextView
            style="@style/homeText3"
            android:text="Forgot Password"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginFieldsTextLayout">
        <EditText
            android:id="@+id/forgot_password_email"
            style="@style/LoginFieldsTextStyle"
            android:inputType="textEmailAddress"
            android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgot_password_reset_button"
            style="@style/ButtonsStyle"
            android:padding="12dp"
            android:textColor="@color/flocknsaveDarkBlue"
            android:background="@drawable/rounded_button"
            android:text="Reset Password" />

        <TextView
            android:id="@+id/forgot_password_cancel"
            style="@style/ButtonsStyle"
            android:text="Cancel"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="@color/red"
            android:background="@drawable/rounded_button_dark"/>

    </LinearLayout>
</ScrollView>