<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/electricity_no_icp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO ICPs"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


    <Button
        android:id="@+id/electricity_add_icp"
        style="@style/ButtonsStyle"
        android:padding="12dp"
        android:textColor="@color/flocknsaveDarkBlue"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:text="Add ICP" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/electricity_Recycler_View"
        android:layout_below="@id/electricity_add_icp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>