<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_class.ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/product_quantity_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:elevation="16dp"
                app:cardBackgroundColor="@color/transparentBackground"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/product_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:padding="12dp"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/product_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Product description"
                android:padding="8dp"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/product_detail_saving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Product saving"
                android:padding="8dp"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/product_quantity_button"
        android:layout_width="256dp"
        android:layout_height="42dp"
        android:layout_above="@+id/addtocart"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        app:initialNumber="1"
        app:finalNumber="100"
        android:longClickable="true"
        app:textSize="8dp"
        app:textColor="#000000"
        app:backGroundColor="#ffffff"
        />

    <Button

        android:id="@+id/addtocart"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Add to Cart"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

</RelativeLayout>