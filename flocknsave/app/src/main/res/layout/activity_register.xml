<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/register_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="36dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="56dp">

        <ImageView
            android:id="@+id/register_imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_register"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/register_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last name"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_businessname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Name"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone"
            android:layout_margin="4dp"/>

        <EditText
            android:id="@+id/register_street_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street Address"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_suburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Distict/Suburb"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_post_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post Code"
            android:inputType="number"
            android:layout_margin="4dp"/>
        <Spinner
            android:id="@+id/register_region_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            />

        <Spinner
            android:id="@+id/register_industry_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_margin="4dp"/>
        <Spinner
            android:id="@+id/register_person_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            />

        <Button
            android:id="@+id/register_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create account" />

        <TextView
            android:id="@+id/register_link_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already a member? Login"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="4dp"
            android:layout_margin="4dp"
             />
    </LinearLayout>

</ScrollView>