<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Home Page styles. -->
    <style name="flocknsaveLogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@drawable/rounded_button_dark</item>
    </style>

    <style name="homeText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/flocknsaveDarkBlue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="homeText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/flocknsaveGreen</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="homeText3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/flocknsaveDarkBlue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="homeIconsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="homeLabelsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/flocknsaveDarkBlue</item>
    </style>

    <style name="homeTextBuyerHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="homeTextBuyer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Login & Register Page styles. -->
    <style name="flocknsaveLogoLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">@drawable/rounded_button_dark</item>
    </style>

    <style name="LoginFieldsTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#20eaeaea</item>
    </style>

    <style name="LoginFieldsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loginText</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <!-- About Us styles. -->
    <style name="whyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">18dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/flocknsaveDarkBlue</item>
    </style>

    <style name="howMainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:textColor">@color/flocknsaveDarkBlue</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="howGreenText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/flocknsaveGreen</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="howRedText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="howCheckImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:src">@drawable/ic_check_green_24dp</item>
    </style>

    <style name="howCrossImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:src">@drawable/ic_cross_red_24dp</item>
    </style>

</resources>
